<div data-section-id="{{ section.id }}" data-section-type="blog-section">
  <section class="home-blog-layout">
    <div class="container">
      <div class="row">
        <div class="home-blog-inner">
          <div class="page-title text-center not-animated" data-animate="zoomIn" data-delay="100">
            <h2>{{ section.settings.title }}</h2>
            <p class="sub-title">
              {{ section.settings.sub_title }}
            </p>
            {% if section.settings.caption != '' %}
            <p class="caption">
              {{ section.settings.caption }}
            </p>
            {% endif %}
          </div>
          <div class="clearfix home-blog-content-inner">
            <div class="home-blog-content">
              {% if section.blocks.size > 0 %}
                {% for block in section.blocks %}
                <div class="col-sm-4 not-animated" data-animate="fadeInUp" data-delay="{{ forloop.index }}00">
                  <div class="article">
                    <div class="group-blog-top">

                      {% if block.settings.image %}
                      <div class="top-banner article-image">
                        <a href="{{ block.settings.link }}">
                          <img src="{{block.settings.image | img_url: 'master' }}" alt="" />
                        </a>
                      </div>
                      {% endif %}

                    </div>
                    <div class="articleinfo_group">
                      <div class="blog-title-group">
                        <h5> {{ block.settings.name }}</h5>                        
                      </div>                  
                      <div class="article-title">                     
                        <h2 class="article-name"><a href="{{ block.settings.link }}">{{ block.settings.caption }}</a></h2>
                      </div>
                      <div class="blog-title-group" style="padding-bottom: 10px;">                        
                        <a class="_btn" href="{{ block.settings.link }}">
                          {{ block.settings.action_text }}
                        </a>
                      </div>                  
                    </div> 
                  </div>                
                </div>
                {% endfor %}
              {% else %}
                <div class="grid grid--uniform grid--blog">
                  {% for i in (1..3 ) %}
                    <div class="article-content col-sm-4">
                      <div class="article-inner">
                        <div class="article-left">
                          <a class="article-img" href="#">
                            <img src="{{ '667x667.png' | asset_url | split:'?v=' | first }}" alt=""/>
                          </a>                   
                        </div>
                        <div class="article-right">
                          <div class="article-name"><a href="#">{{ 'homepage.onboarding.blog_title' | t }}</a></div>
                          <div class="article-description">
                            <p>{{ 'homepage.onboarding.blog_excerpt' | t | truncatewords: 30 }}</p>
                          </div>
                        </div>
                      </div>
                    </div>
                  {% endfor %}
              </div>
              {% endif %}
            </div>
          </div>          
        </div>
      </div>
      <div class="row">
        <div class="action view-all">
          <a class="_btn view-all-btn" href="{{ section.settings.view_all_link }}">{{ section.settings.view_all_title }}</a>
        </div>
      </div>
    </div>
  </section>
</div>


{% schema %}
{
  "name": "Farmers",
  "class": "index-section index-section-blog",
  "settings": [
  {
    "type": "text",
    "id": "title",
    "label": "Title"
  },
  {
    "type": "text",
    "id": "sub_title",
    "label": "Sub Title"
  },
  {
    "type": "textarea",
    "id": "caption",
    "label": "Caption"
  },
  {
    "type": "color",
    "id": "color_background",
    "label": "Background Color"
  },
  {
    "type": "image_picker",
    "id": "background",
    "label": "Upload Background"
  },
  {
    "type": "text",
    "id": "view_all_title",
    "label": "View All Title"
  },
  {
    "type": "url",
    "id": "view_all_link",
    "label": "View All Link"
  }
  ],
  "blocks": [
  {
    "type": "item",
    "name": "Item",
    "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Upload Avatar"
    },
    {
      "type": "textarea",
      "id": "caption",
      "label": "Caption"
    },
    {
      "type": "text",
      "id": "name",
      "label": "Name"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Farmer link"
    },
    {
      "type": "text",
      "id": "action_text",
      "label": "Action text"
    }
    ]
  }
  ],
  "presets": [{
  "name": "Farmers",
  "category": "Store Information"
}]
}
{% endschema %}
